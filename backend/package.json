{
  "name": "credence-contracts",
  "version": "1.0.0",
  "description": "Smart Contracts for Credence - Full DApp Decentralized Credential Management",
  "scripts": {
    "compile": "npx hardhat compile",
    "deploy:local": "npx hardhat run scripts/deploy.js --network localhost",
    "node": "npx hardhat node",
    "test": "npx hardhat test",
    "slither": "slither . --exclude-dependencies",
    "slither:json": "slither . --json slither-report.json",
    "circom:compile": "cd circuits && circom credentialProof.circom -o build -r",
    "circom:install": "cd circuits && npm install",
    "circom:setup": "cd circuits && npm run setup",
    "circom:full-setup": "cd circuits && npm run full-setup",
    "circom:prove": "cd circuits && npm run prove"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "dotenv": "^16.0.0",
    "hardhat": "^2.17.1",
    "hardhat-gas-reporter": "^1.0.8",
    "keccak256": "^1.0.6",
    "merkletreejs": "^0.6.0"
  },
  "keywords": [
    "blockchain",
    "credentials",
    "web3",
    "ethereum",
    "hardhat",
    "dapp"
  ],
  "author": "Credence Team",
  "license": "MIT",
  "dependencies": {
    "viem": "^2.46.1"
  }
}

# Credence - Environment Variables Configuration
# Copy this file to .env and fill in your values

# ======================
# ETHERSCAN / BLOCKSCAN
# ======================
# Get your API key from https://etherscan.io/apis
ETHERSCAN_API_KEY=your_etherscan_api_key

# ======================
# SEPOLIA NETWORK
# ======================
# Get your RPC URL from Infura (https://infura.io) or Alchemy (https://alchemy.com)
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY

# Your wallet private key (DO NOT COMMIT THIS!)
# For deployment - use a wallet with testnet ETH
PRIVATE_KEY=0xyour_private_key_here

# Or use a mnemonic phrase
SEPOLIA_MNEMONIC=your_12_word_mnemonic_phrase_here

# ======================
# MAINNET (Optional)
# ======================
MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY

# ======================
# IPFS / PINATA (Optional)
# ======================
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret_key

# ======================
# GAS REPORTER (Optional)
# ======================
REPORT_GAS=true
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key
